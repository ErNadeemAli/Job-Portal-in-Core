@model IEnumerable<Job_portal_in_Core.Models.JobRecruiter>

@{
    ViewData["Title"] = "JobRecruiter";
}
@{
    Layout = "~/views/shared/_layout_dashboard.cshtml";
}
<h1 class="text-center">Job Recruiter</h1>

@if(TempData["mes"]!=null)
{
    <p style="color:green; font:bold;">@ViewBag.msg</p>
}

<table class="table">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company_url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company_email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company_password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Company_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company_url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company_email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company_password)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" style="text-decoration:none; color:green;"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" style="text-decoration:none; color:darkblue;"><i class="fa fa-info-circle" aria-hidden="true"></i>Details</a> |
                    <a asp-action="DeleteJobRecruiter" asp-route-id="@item.Id" style="text-decoration:none; color:red;"><i class="fa fa-trash-o" aria-hidden="true"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
